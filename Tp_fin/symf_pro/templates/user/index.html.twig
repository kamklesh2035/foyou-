{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th scoop="col">Id</th>
                <th scoop="col">Name</th>
                <th scoop="col">Telephone</th>
                <th scoop="col">Email</th>
                <th scoop="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a class = " btn btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a class = " btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class = " btn btn-primary" href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
