{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th scoop="col">Id</th>
                <th scoop="col">Libelle</th>
                <th scoop="col">Price</th>
                <th scoop="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.libelle }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a class = " btn btn-primary" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a class = " btn btn-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class = " btn btn-primary" href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
