{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Commandes</h1>

    <table class="table">
        <thead>
            <tr>
                <th scoop="col">N°Commande</th>
                <th scoop="col">Libellé Produit</th>
                <th scoop="col">Client</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.product }}</td>
                <td>{{ order.user }}</td>
                <td>
                    <a class = " btn btn-primary" href="{{ path('app_order_show', {'id': order.id}) }}">show</a>
                    <a class = " btn btn-primary" href="{{ path('app_order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class = " btn btn-primary" href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
